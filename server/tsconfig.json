{
    "compilerOptions": {
        "emitDecoratorMetadata": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "ES5",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./markscriptfile.ts",
        "./server.ts",
        "./src/**/*.ts",
        "./node_modules/ml-typescript-definitions/*.d.ts",
        "./typings/**/*.d.ts",
        "./example/**/*.ts",
        "./test/**/*.ts"
    ],
    "files": [
        "./markscriptfile.ts",
        "./server.ts",
        "./src/lib/databaseModel.ts",
        "./src/lib/models/scores.ts",
        "./src/lib/services/leaderboardService.ts",
        "./src/lib/services/playerService.ts",
        "./src/test/test.ts",
        "./node_modules/ml-typescript-definitions/client.d.ts",
        "./node_modules/ml-typescript-definitions/server.d.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts"
    ]
}
