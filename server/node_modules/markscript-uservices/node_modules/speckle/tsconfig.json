{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": "./src",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "."
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./speckle.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./src/lib/index.ts",
        "./src/lib/prefix.ts",
        "./src/lib/queryBuilder.ts",
        "./src/lib/ruleBuilder.ts",
        "./src/lib/value.ts",
        "./src/lib/variable.ts"
    ]
}
