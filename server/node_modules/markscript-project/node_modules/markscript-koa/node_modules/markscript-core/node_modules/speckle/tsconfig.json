{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./speckle.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/index.ts",
        "./lib/prefix.ts",
        "./lib/queryBuilder.ts",
        "./lib/ruleBuilder.ts",
        "./lib/value.ts",
        "./lib/variable.ts",
        "./speckle.d.ts"
    ]
}
